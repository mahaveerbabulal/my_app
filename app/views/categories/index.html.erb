<h3>Listing Categories - (<span id="category_count"><%= @categories.size %></span>)</h3>

<ul id="category_list">
	<% for category in @categories %>
	<li id="li_<%= category.id %>"><%= category.name %>

	<%= link_to edit_category_path(category), remote: true do %>
		<span class="glyphicon glyphicon-pencil"></span>
		<% end %>
	<%= link_to "X", category_path(category), method: :delete, date: {confirm: "Are you sure?"}, remote: true %>
	</li>
	<% end %>
</ul>

<%= link_to "Add Category", new_category_path, id:"add_category", remote: true %>